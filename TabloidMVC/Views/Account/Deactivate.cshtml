@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "Deactivate";
}
<main class="users-container">
    <section class="users-table">
        <h1>Deactivate</h1>

        <h4>Are you sure you want to deactivate @Model.DisplayName?</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Deactivate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Id" hidden class="control-label"></label>
                        <input asp-for="Id" hidden class="form-control" />
                        <span asp-validation-for="Id" hidden class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" hidden class="control-label"></label>
                        <input asp-for="FirstName" hidden class="form-control" />
                        <span asp-validation-for="FirstName" hidden class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" hidden class="control-label"></label>
                        <input asp-for="LastName" hidden class="form-control" />
                        <span asp-validation-for="LastName" hidden class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DisplayName" hidden class="control-label"></label>
                        <input asp-for="DisplayName" hidden class="form-control" />
                        <span asp-validation-for="DisplayName" hidden class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" hidden class="control-label"></label>
                        <input asp-for="Email" hidden class="form-control" />
                        <span asp-validation-for="Email" hidden class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateDateTime" hidden class="control-label"></label>
                        <input asp-for="CreateDateTime" hidden class="form-control" />
                        <span asp-validation-for="CreateDateTime" hidden class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label hidden class="form-check-label">
                            <input hidden class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageLocation" hidden class="control-label"></label>
                        <input asp-for="ImageLocation" hidden class="form-control" />
                        <span asp-validation-for="ImageLocation" hidden class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserTypeId" hidden class="control-label"></label>
                        <input asp-for="UserTypeId" hidden class="form-control" />
                        <span asp-validation-for="UserTypeId" hidden class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" hidden class="control-label"></label>
                        <input asp-for="FullName" hidden class="form-control" />
                        <span asp-validation-for="FullName" hidden class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Confirm" class="btn btn-primary" /> |
                        <a asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
